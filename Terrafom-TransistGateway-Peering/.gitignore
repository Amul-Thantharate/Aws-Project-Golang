*_override.tf.json

# Ignore CLI configuration files
.terraformrc
terraform.rc

# Ignore lock files
.terraform.lock.hcl

# Ignore Mac/OSX system files
.DS_Store

# Ignore editor and IDE files
.idea/
.vscode/
*.swp
*.swo

# Ignore log files
*.log

# Ignore local environment files
.env
.env.*

# Ignore plan output files
tfplan
*.plan

# Ignore any local scripts
*.sh